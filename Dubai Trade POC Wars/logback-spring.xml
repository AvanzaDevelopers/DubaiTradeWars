<?xml version="1.0" encoding="UTF-8"?>
<configuration>



    <appender name="Console"
              class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %white(%d{ISO8601}) %highlight(%-5level) [%blue(%t)] %yellow(%C{1.}): %msg%n%throwable
            </Pattern>
        </layout>
    </appender>

    <appender name="RollingFile"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>C:/Users/haris.ali/Desktop/DubaiCustom/ecom-Intg/logs/messaging.log</file>
        <encoder
                class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>||ECOM|%p|%d{ISO8601}|%C{1.}:%L|%m|%t||||||%n</Pattern>
        </encoder>



        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- daily rollover -->
            <fileNamePattern>C:/Users/haris.ali/Desktop/DubaiCustom/ecom-Intg/logs/messaging-%d{yyyy-MM-dd}.%i.log</fileNamePattern>

            <!-- keep 30 days' worth of history capped at 3GB total size -->
            <maxFileSize>5MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>


    </appender>


    <!-- LOG everything at INFO level -->
    <root level="info">
        <appender-ref ref="RollingFile" />
        <appender-ref ref="Console" />
    </root>

</configuration>